{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "isolatedModules": true,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "moduleDetection": "force",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "**/*.ts",
    "src/test/*.ts",
    "jest.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}